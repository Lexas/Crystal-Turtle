/*! ============================ Basic Elements ============================= */



//
 

/*! =============================== General ================================ */


.verticalCenter
	display table-cell
	vertical-align middle

#project  
	padding-left 1.2em

#loaded
	display inline
 

/*! ============================= Yet Unused =============================== */


.dialog
	background-color #F0F0F0
	border solid 1px #121212
	left 40%
	padding 0.5em
	position fixed
	top 5pc
	width 25%
	form
		margin-top 0
		padding-top 0
	h2
		line-height 1em

.msg  
	display none 
	padding 10px 
	position fixed 
	bottom  5% 
	right  5% 
	width 350px 
	min-height 26px 
	background #C0C0C0 

.userArea
	display inline-block
	float right
	vertical-align top
	a
		display inline-block
		font-size 16px
		width 100px

#area  
	margin auto 
	margin-top 20px 
	width 100% 
	min-width 950px 

#logout  
	float  right 
 

/*! ============================== Carrousel =============================== */


.fragment  
	border-left  solid 1px #020202 
	border-right  solid 1px #020202 
	display block 
	float left 
	position relative 
	width 180px 
 
.timestamp  
	background-color  #F5F3F4 
	border-bottom  solid 1px #202020 
	display block 
	font-size 15px 
	height 20px 
	text-align center 

#bw    
	float left  
	
#bw
#fw
	background-color #020202 
	color #F5F3F4  
	display table
	font-size 25px  
	height 100px  
	position relative 
	text-align center  
	width 30px  
	z-index 1 
	
#fw 
	float right 

#timeline  
	background-color #050505 
	display inline-block
	height 100px 
	width 100%
	overflow hidden 

#timeline .thumb  
	background-color #020202 
	display inline-block 
	height 80px 
	width 180px 
 
#timeline .thumb img  
	height 80px 
	width 180px 

#tlIn  
	background-color #050505 
	display block 
	height 100% 
	position relative 
	transition all 0.2s ease-out
	width 100% 
	white-space nowrap
 
#tlView  
	display block 
	height  100px 
	overflow hidden 
	padding 0 
	position relative 
	white-space nowrap
	

/*! ============================== Panel =============================== */


#panel 
	display block 
	position absolute 
	top 0
	left -27% 
	width 27% 
	height 100% 
	background-color #F5F3F4 
	padding-left 20px 
	transition all 0.2s ease 
	z-index 2 

#panTab 
	color #F5F3F4
	display table
	background-color #303030
	width 20px
	height 100%
	float right

#panTab span  
	height 100% 

 



