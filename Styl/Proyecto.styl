/*!================= Contents =================
* Selectors are ordered by elements, classes, ids, then by alphabetic order
*	@font-face
*	Basic Elements (body, footer, header, nav)
*	General (Reusable attributes for nonspecific use and containers)
*	Yet Unused (some stuff will be moved to the main style sheet)
*	Carrousel
*	Panel
*	Forms
*	Info
=============================================*/


@font-face 
    font-family  'AmbleLightCondensed' 
    src  url('media/font/Amble-LightCondensed-webfont.woff') format('woff'),
         url('media/font/Amble-LightCondensed-webfont.ttf') format('truetype')
    font-weight  normal 
    font-size 100%
    font-style  normal 

@font-face
    font-family  'BitstreamVeraSansRoman' 
    src  url('media/font/Vera-webfont.woff') format('woff'),
         url('media/font/Vera-webfont.ttf') format('truetype')
    font-weight  normal 
    font-size 100%
    font-style  normal 


@font-face
    font-family  'BebasNeueRegular' 
    src  url('media/font/BebasNeue-webfont.woff') format('woff'),
         url('media/font/BebasNeue-webfont.ttf') format('truetype')
    font-weight  normal 
    font-size 100%
    font-style  normal 

@font-face
    font-family  'SteelfishRgBold' 
    src  url('media/font/steelfish_bd.woff') format('woff'),
         url('media/font/steelfish_bd.ttf') format('truetype')
    font-weight  normal 
    font-size 100%
    font-style  normal 

@font-face  
    font-family  'KenyanCoffeeRgRegular' 
    src  url('media/font/kenyan_coffee_rg.woff') format('woff'),
         url('media/font/kenyan_coffee_rg.ttf') format('truetype')
    font-weight  normal 
    font-size 100%
    font-style  normal 


/*! ============================ Basic Elements ============================= */


body 
	font-family  'AmbleLightCondensed', sans-serif
	color #303030
	font-size 100%
	margin  0
	padding  0
	background  #F5F3F4
	min-width 950px
	height 100%
	overflow auto

footer  
	font-size 15px 
	text-align center 
	margin auto 
	margin-top 90px 
	display  block 
	min-width  300px 
	width  15% 
	border-top  solid 1px #303030 

header  
	background  #FBFBFB 
	display  block 
	line-height 0
	margin 0 0 0 0 
	padding  0.6em 0 1.2em 9%
	position  relative 
	h1  
		font-family 'SteelfishRgBold' 
		font-size 4.5em 
		letter-spacing 0.04em 
		line-height 0.2em 
	a  
		font-family 'BebasNeueRegular' 
		font-size 1.81em 
		line-height 0 
		margin 0 0 0 0.1em  

nav  
	background-color  #303030 
	color #F0F0E0 
	display  block 
	font-family 'KenyanCoffeeRgRegular' 
	font-size 1em
	overflow  auto 
	width 100% 
	a, a:hover, a:link, a:visited, a:active
		border  solid 1px #848583 
		color #F0F0E0 
		display table-cell
		font-family 'KenyanCoffeeRgRegular' 
		height 1em
		padding 5% 10%
		outline none
		transition all 0.2s ease
		vertical-align middle
		width  5em 
	a:focus
		background-color #191919
		border  solid 1px #F0F0F0 
		color #F0F0F0
	li  
		display  inline-block 
		margin  1% 
	ul  
		display block 
		margin auto 
		overflow  auto 
		width  85% 
 

/*! =============================== General ================================ */


.verticalCenter
	display table-cell
	vertical-align middle

#project  
	padding-left 1.2em 

#loaded
	display inline
 


/*! ============================= Yet Unused =============================== */


.dialog
	background-color #F0F0F0
	border solid 1px #121212
	left 40%
	padding 0.5em
	position fixed
	top 5pc
	width 25%
	form
		margin-top 0
		padding-top 0
	h2
		line-height 1em

.msg  
	display none 
	padding 10px 
	position fixed 
	bottom  5% 
	right  5% 
	width 350px 
	min-height 26px 
	background #C0C0C0 

.temp 
	display inline-block
	float right
	vertical-align top
	a
		display inline-block
		font-size 16px
		width 100px

#area  
	margin auto 
	margin-top 20px 
	width 100% 
	min-width 950px 

#logout  
	float  right 
 

/*! ============================== Carrousel =============================== */


.fragment  
	border-left  solid 1px #020202 
	border-right  solid 1px #020202 
	display block 
	float left 
	position relative 
	width 180px 
 
.timestamp  
	background-color  #F5F3F4 
	border-bottom  solid 1px #202020 
	display block 
	font-size 15px 
	height 20px 
	text-align center 

#bw    
	float left  
	
#bw
#fw
	background-color #020202 
	color #F5F3F4  
	display table
	font-size 25px  
	height 100px  
	position relative 
	text-align center  
	width 30px  
	z-index 1 
	
#fw 
	float right 

#timeline  
	background-color #050505 
	display inline-block
	height 100px 
	width 100%
	overflow hidden 

#timeline .thumb  
	background-color #020202 
	display inline-block 
	height 80px 
	width 180px 
 
#timeline .thumb img  
	height 80px 
	width 180px 

#tlIn  
	background-color #050505 
	display block 
	height 100% 
	position relative 
	transition all 0.2s ease-out
	width 100% 
	white-space nowrap
 
#tlView  
	display block 
	height  100px 
	overflow hidden 
	padding 0 
	position relative 
	white-space nowrap
	

/*! ============================== Panel =============================== */


#panel 
	display block 
	position absolute 
	top 0px 
	left -27% 
	width 27% 
	height 100% 
	background-color #F5F3F4 
	padding-left 20px 
	transition  all 0.2s ease 
	z-index 2 

#panTab 
	color #F5F3F4
	display table
	background-color #303030
	width 20px
	height 100%
	float right

#panTab span  
	height 100% 

 



/*! ================================ Forms ================================= */


form  
	display block 
	margin auto 
	margin-top 70px 
	overflow auto 

form span 
	display block 
	overflow auto 

label  
	font-family 'AmbleLightCondensed' 
	font-size 18px 
	margin-top 2px 
	margin-bottom 2px 
	margin-right 10px 
	display block 

input invalid 
	box-shadow none 

[type = text], [type = password],  valid,  invalid  
	font-family 'BitstreamVeraSansRoman' 
	font-size 13px 
	display block 
	border  solid 1px #A0A0A0 
	border-radius 0 
 

[type = button], [type = submit] 
	font-family 'BitstreamVeraSansRoman' 
	font-size 14px 
	display block 
	width 80px 
	height 25px 
	border  solid 1px #A0A0A0 
	border-radius 0 

 form input focus  invalid  
	background  url(media/img/invalid.png) no-repeat 98% center 
	box-shadow  0 0 3px #d45252 
	border  solid 1px #b03535 
 

form input focus  valid 
	background  url(media/img/valid.png) no-repeat 98% center 
	box-shadow  0 0 5px #5cd053 
	border  solid 1px #35b035 


/*==================== Info ===========================*/


.contentLayer
	background-color #C5C5B5

.emptyLayer
	background-color #E5E5D8
	color #909090

.entry
	background-color #D8D8CA
	display inline-block
	font-size 0.8em
	padding 0.5em
	width 100%
	h2
		line-height 1em
		margin 0
	.related, .tags
		margin-top 0.5em

.layer
	border-bottom solid 1px #252525
	padding 0.5em

.new
	display inline-block
	width 10em

#contents
	display inline-block
	width 70%

#entries, #layers
	display inline-block
	vertical-align top

#fragmentInfo
	background-color #E5E5D8
	display inline-block
	margin 2% 2%
	padding 0.5% 0.5%
	width 60%

#img img
	width 90%

#img, #link, #text
	display inline-block
	margin 0.5em
	vertical-align top
	width 27%

#projectInfo
	background-color #E5E5D8
	display inline-block
	margin 2% 2%
	width 30%


/*==================== Login ===========================*/


#login  
	width 30% 
	max-width 250px 
	min-width 115px 
	margin auto 
	padding 25px 
	overflow auto 
 

#login .usr, .pass  
	float right 
	width 130px 
 

#login span 
	display block 
	min-height 40px 
	width 100% 
	padding 3px 
	overflow auto 
	margin-bottom 10px 
 

#login label 
	float left 
	width 100px 
 

