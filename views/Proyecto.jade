
link(rel="stylesheet", href="/Proyecto.css")
script(src="/Proyecto.js")
div#panel
	div#panTab
		span.verticalCenter >>
	form
		input (type="file", name="somename", size="20") 
		br
		textarea(cols="30", rows="10", disabled) archivos
		br
		input(type="text", name="somename", size="30") 
		br
		input(type="text", name="somename", size="7") -
		br
		input(type="text", name="somename", size="7")
div#project
	div#script 
		a.open(href = "/script/#{project}") Script 
		if isMember
			| |   
			a.load(href = "/NewFragment") Add fragment
	div#timeline
		div.bw
			span.verticalCenter <
		div.fw
			span.verticalCenter >
		div#tlView
			div#tlIn
	div#frames
		div.bw
			span.verticalCenter <
		div.fw
			span.verticalCenter >
		div#frView
			div#frIn
			
	div#proyInfo
		div#stats
			| Repp : #{stats.reputation}
			br
			| Vp : #{stats.views}
			br
			| Act : #{stats.activity}
			br
			| Dev : #{stats.development}
			br
			a.open(href = "/log/#{project}") View Log
			if isMember
				|  | 
				a#nIssue(href = "/loadIssueForm/#{project}") New Issue
		div#issues
			each i in issues
				div.issue
					h2 #{i.title}
					div.content !{i.content}
					span.author by #{i.author} - 
					span.date on #{i.date} 
	div#fragmentInfo
	div#loaded
