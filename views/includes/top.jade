html(lang="en")
    head
        meta(charset="utf-8") 
        title Crystal Turtle
        link(rel="stylesheet", href="/lib/jquery-ui/css/ui-lightness/jquery-ui-1.10.2.custom.min.css")
        link(rel="stylesheet", href="/css/main.css")
        script(src="/lib/require.js", data-main="/app/boot")
    body
        div#wrapper
            header
                h1 Crystal Turtle
                a Animation Studio _ (pre-alpha 0.1.1).
